<div class="small-12 columns">
  <div class="row ">
      <h2><img class="org-logo" src="{{logo_path}}"></img>{{name}}</h2>
  </div>
  <div class="row collapse">
    <div class="small-12">
      <p>
        {{description}}
      </p>
    </div>
  </div>
  <div class="row collapse">
    <div class="small-12">
      {{#if joined}}
        <button class="alert">Leave Organization</button>
      {{else}}
        {{#if requestPending}}
          <button class="disabled">Request Pending</button>
        {{else}}
          <button>Join Organization</button>
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>